<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <!-- properties -->
  <property name="connection.driver_class">org.postgresql.Driver</property>
  <property name="connection.url">jdbc:postgresql://localhost:5432/infoclin</property>
  <!--   <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property> -->
  <property name="show_sql">true</property>
  <property name="connection.username">infoclin</property>
  <property name="connection.password">infoclin</property>
  <property name="connection.pool_size">100</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
  <!--  mapping classes -->
  <mapping class="ifrn.pds.model.Endereco" />
  <mapping class="ifrn.pds.model.Convenio" />
  <mapping class="ifrn.pds.model.Usuario" />
  <mapping class="ifrn.pds.model.Administrador" />
  <mapping class="ifrn.pds.model.Atendente" />
  <mapping class="ifrn.pds.model.Medico" />
  <mapping class="ifrn.pds.model.Paciente" />
  <mapping class="ifrn.pds.model.Agenda" />
  <mapping class="ifrn.pds.model.TipoProcedimento" />
  <mapping class="ifrn.pds.model.Procedimento" />
  <mapping class="ifrn.pds.model.Especialidade" />
  <mapping class="ifrn.pds.model.Receita" />
  <mapping class="ifrn.pds.model.Prontuario" />
 </session-factory>
</hibernate-configuration>
